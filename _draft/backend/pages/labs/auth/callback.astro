---
import Layout from '../../../layouts/Layout.astro';

// This page handles the OAuth callback
// In a real implementation, this would:
// 1. Extract the code from the URL
// 2. Exchange it for a token via the API
// 3. Set a cookie with the JWT
// 4. Redirect to the dashboard

// For MVP/demo, we just show a loading state and redirect
---

<Layout title="Logging in... | Labs | works-on-my.cloud">
  <div class="min-h-screen flex items-center justify-center bg-bg-primary">
    <div class="text-center">
      <div
        class="w-12 h-12 mx-auto mb-4 border-4 border-accent-blue border-t-transparent rounded-full animate-spin"
      >
      </div>
      <p class="text-fg-secondary">Completing login...</p>
    </div>
  </div>
</Layout>

<script>
  // Handle OAuth callback
  async function handleCallback() {
    const urlParams = new URLSearchParams(window.location.search);
    const code = urlParams.get('code');
    const error = urlParams.get('error');

    if (error) {
      console.error('OAuth error:', error);
      window.location.href = '/labs/login?error=' + encodeURIComponent(error);
      return;
    }

    if (!code) {
      // No code, redirect to login
      window.location.href = '/labs/login';
      return;
    }

    try {
      const apiUrl = import.meta.env?.PUBLIC_LABS_API_URL || 'http://localhost:3000/api';

      // Exchange code for token
      const response = await fetch(`${apiUrl}/auth/github/callback`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ code }),
        credentials: 'include', // Include cookies
      });

      if (!response.ok) {
        throw new Error('Token exchange failed');
      }

      const data = await response.json();

      // For MVP: store token in localStorage (in production, use httpOnly cookie)
      if (data.token) {
        localStorage.setItem('labs_token', data.token);
      }

      // Redirect to dashboard
      window.location.href = '/labs/dashboard';
    } catch (err) {
      console.error('Callback error:', err);
      // For MVP, just redirect to dashboard anyway (mock auth)
      localStorage.setItem('labs_token', 'mock-token');
      window.location.href = '/labs/dashboard';
    }
  }

  // Run on page load
  handleCallback();
</script>
