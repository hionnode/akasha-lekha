{
  "name": "akasha-lekha-monorepo",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm --filter @akasha/web dev",
    "dev:api": "sst dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\"",
    "build": "pnpm --filter @akasha/web build",
    "build:api": "sst build",
    "deploy:web": "pnpm --filter @akasha/web deploy",
    "deploy:api": "sst deploy --stage production",
    "deploy:api:dev": "sst deploy --stage dev",
    "test": "pnpm -r test:run",
    "test:web": "pnpm --filter @akasha/web test:run",
    "test:api": "pnpm --filter @akasha/api test:run",
    "test:e2e": "pnpm --filter @akasha/web test:e2e",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "validate:blog": "node scripts/validate-blog-posts.mjs",
    "db:local": "docker-compose up -d",
    "db:local:stop": "docker-compose down",
    "db:seed": "pnpm --filter @akasha/db seed",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "aws-cdk-lib": "^2.177.0",
    "concurrently": "^9.1.2",
    "constructs": "^10.4.2",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mdast-util-directive": "^3.1.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "sst": "^3.10.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "zod": "^4.3.4"
  }
}
