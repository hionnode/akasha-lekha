---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Container from '../components/layout/Container.astro';
import Button from '../components/shared/Button.astro';
---

<Layout title="404 - Page Not Found | works-on-my.cloud">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <Container class="py-12">
        <div class="max-w-2xl mx-auto text-center">
          <div class="mb-8">
            <pre
              class="text-accent-cyan text-4xl leading-tight mb-4 font-mono text-left">
   .--.
  |o_o |
  |:_/ |
 //   \\ \\
(|     | )
/'\\_   _/\`\\
\\___)=(___/
            </pre>
          </div>

          <h1 class="text-4xl font-bold mb-4">404: Page Not Found</h1>
          <p class="text-fg-secondary text-lg mb-8">
            The page you're looking for doesn't exist or has been moved.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
            <Button href="/" variant="primary"> ← Back to Home </Button>
            <Button href="/blog" variant="secondary"> Browse Blog </Button>
            <Button href="/blog" variant="secondary"> View Blog </Button>
          </div>

          <div class="border-t border-border pt-8">
            <p class="text-fg-muted text-sm mb-4">Quick Links:</p>
            <nav class="flex flex-wrap justify-center gap-4 text-sm">
              <a href="/blog" class="text-accent-blue hover:text-accent-cyan transition-colors">
                Blog
              </a>
              <span class="text-fg-muted">•</span>
              <a href="/blog" class="text-accent-blue hover:text-accent-cyan transition-colors">
                Blog
              </a>
            </nav>
          </div>
        </div>
      </Container>
    </main>
    <Footer />
  </div>
</Layout>

<style>
  pre {
    font-family: 'Inconsolata', monospace;
  }
</style>
