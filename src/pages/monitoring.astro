---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Container from '../components/layout/Container.astro';
---

<Layout title="Unified Cloud Monitoring | works-on-my.cloud" description="Coming soon - Unified Cloud Monitoring platform">
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <Container class="py-12">
        <div class="max-w-2xl mx-auto text-center">
          <h1 class="mb-4">Unified Cloud Monitoring</h1>
          <p class="text-xl text-fg-secondary mb-8">Coming Soon</p>
          <p class="text-fg-muted leading-relaxed">
            A unified monitoring platform for cloud infrastructure. This product component will be
            built at a later stage.
          </p>
        </div>
      </Container>
    </main>
    <Footer />
  </div>
</Layout>

