---
import Badge from '../shared/Badge.astro';
import Button from '../shared/Button.astro';
import TagPill from '../blog/TagPill.astro';

interface Props {
  title: string;
  description: string;
  partCount: number;
  tags: string[];
  slug: string;
  readTime?: number;
}

const { title, description, partCount, tags, slug, readTime } = Astro.props;
---

<article
  class="border border-border bg-bg-secondary p-6 hover:bg-bg-tertiary hover:border-accent-blue transition-all hover:shadow-lg hover:-translate-y-1"
>
  <div class="mb-4">
    <Badge text={`${partCount} PARTS`} variant="accent" />
  </div>
  <h3 class="text-xl font-semibold mb-3">
    <a href={`/guides/${slug}`} class="hover:text-accent-blue transition-colors">
      {title}
    </a>
  </h3>
  <p class="text-fg-secondary mb-4 leading-relaxed line-clamp-3">{description}</p>
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag) => (
      <TagPill tag={tag} />
    ))}
  </div>
  <div class="flex items-center justify-between">
    {readTime && <span class="text-sm text-fg-muted">{readTime} min total</span>}
    <Button href={`/guides/${slug}`} variant="primary">
      Start Reading â†’
    </Button>
  </div>
</article>

