---
interface Props {
  tag: string;
  href?: string;
  class?: string;
}

const { tag, href, class: className = '' } = Astro.props;
const Tag = href ? 'a' : 'span';
---

<Tag
  href={href}
  class={`inline-block px-2 py-1 text-xs font-semibold uppercase tracking-wider text-fg-muted border border-border bg-bg-secondary hover:bg-bg-tertiary hover:text-accent-blue hover:border-accent-blue transition-colors ${className}`}
>
  {tag}
</Tag>

