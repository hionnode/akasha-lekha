---
interface Props {
  count?: number;
  cardLines?: number;
}

const { count = 3, cardLines = 3 } = Astro.props;
---

<div class="space-y-6">
  {Array.from({ length: count }).map(() => (
    <div class="border border-border bg-bg-secondary p-6 animate-pulse">
      <!-- Title skeleton -->
      <div class="h-6 bg-bg-tertiary rounded w-3/4 mb-4"></div>
      
      <!-- Content lines skeleton -->
      <div class="space-y-2 mb-4">
        {Array.from({ length: cardLines }).map(() => (
          <div class="h-4 bg-bg-tertiary rounded" style="width: 100%"></div>
        ))}
      </div>
      
      <!-- Footer skeleton -->
      <div class="flex items-center gap-3 flex-wrap">
        <div class="h-4 bg-bg-tertiary rounded w-24"></div>
        <div class="h-4 bg-bg-tertiary rounded w-16"></div>
        <div class="flex gap-2">
          {Array.from({ length: 3 }).map(() => (
            <div class="h-6 bg-bg-tertiary rounded w-16"></div>
          ))}
        </div>
      </div>
    </div>
  ))}
</div>


