---
interface Props {
  method: 'GET' | 'POST' | 'PUT' | 'DELETE' | 'PATCH' | 'HEAD' | 'OPTIONS';
  path: string;
  description?: string;
  class?: string;
}

const { method, path, description, class: className = '' } = Astro.props;

const methodColors: Record<string, string> = {
  GET: 'var(--accent-green)',
  POST: 'var(--accent-blue)',
  PUT: 'var(--accent-yellow)',
  DELETE: 'var(--accent-red)',
  PATCH: 'var(--accent-purple)',
  HEAD: 'var(--accent-cyan)',
  OPTIONS: 'var(--fg-muted)',
};
---

<div class={`api-endpoint ${className}`}>
  <div class="api-header">
    <span
      class="api-method"
      style={`background-color: ${methodColors[method] || methodColors.GET};`}
    >
      {method}
    </span>
    <code class="api-path">{path}</code>
    <button class="api-copy-button" data-path={path} aria-label="Copy API path" title="Copy path">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
    </button>
  </div>
  {description && <div class="api-description">{description}</div>}
  <div class="api-content">
    <slot />
  </div>
</div>

<script>
  function initApiEndpoint() {
    const buttons = document.querySelectorAll('.api-copy-button');

    buttons.forEach((button) => {
      button.addEventListener('click', async (e) => {
        e.stopPropagation();
        const path = (button as HTMLElement).getAttribute('data-path');
        if (!path) return;

        try {
          await navigator.clipboard.writeText(path);
          const originalHTML = button.innerHTML;
          button.innerHTML =
            '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          button.classList.add('copied');

          setTimeout(() => {
            button.innerHTML = originalHTML;
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initApiEndpoint);
  } else {
    initApiEndpoint();
  }

  // Re-initialize on navigation (Astro View Transitions)
  document.addEventListener('astro:page-load', initApiEndpoint);
</script>

<style>
  .api-endpoint {
    margin: 1.5rem 0;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem;
    background: var(--bg-secondary);
  }

  .api-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .api-method {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--bg-primary);
    font-family: 'Inconsolata', monospace;
  }

  .api-path {
    flex: 1;
    color: var(--accent-cyan);
    font-size: 0.9375rem;
    font-family: 'Inconsolata', monospace;
    background: transparent;
    padding: 0;
    border: none;
  }

  .api-copy-button {
    background: transparent;
    border: none;
    color: var(--fg-muted);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .api-copy-button:hover {
    background: var(--bg-tertiary);
    color: var(--fg-secondary);
  }

  .api-copy-button.copied {
    color: var(--accent-green);
  }

  .api-copy-button svg {
    width: 16px;
    height: 16px;
  }

  .api-description {
    color: var(--fg-secondary);
    font-size: 0.875rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border);
  }

  .api-content {
    margin-top: 0.75rem;
  }

  .api-content :global(pre) {
    margin: 0;
  }
</style>
