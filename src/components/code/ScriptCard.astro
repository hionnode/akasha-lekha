---
import Badge from '../shared/Badge.astro';
import TagPill from '../blog/TagPill.astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  language: string;
  slug: string;
  externalRepo?: string;
}

const { title, description, tags, language, slug, externalRepo } = Astro.props;
---

<article
  class="border border-border bg-bg-secondary p-6 hover:bg-bg-tertiary hover:border-accent-blue transition-colors"
>
  <div class="flex items-start justify-between mb-3">
    <h3 class="text-xl font-semibold">
      <a href={`/code/${slug}`} class="hover:text-accent-blue transition-colors">
        {title}
      </a>
    </h3>
    <Badge text={language.toUpperCase()} variant="accent" />
  </div>
  <p class="text-fg-secondary mb-4 leading-relaxed">{description}</p>
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag) => (
      <TagPill tag={tag} />
    ))}
  </div>
  {externalRepo && (
    <a
      href={externalRepo}
      target="_blank"
      rel="noopener noreferrer"
      class="text-sm text-accent-blue hover:text-accent-cyan transition-colors inline-flex items-center gap-1"
    >
      View on GitHub â†’
    </a>
  )}
</article>

