<div id="terminal-instructions" class="h-full px-4 flex items-center gap-6 text-xs text-fg-muted">
  <div class="flex items-center gap-4">
    <span class="font-semibold text-fg-secondary">Navigation:</span>
    <span id="nav-keys" class="font-mono">↑↓ navigate</span>
  </div>
  <div class="flex items-center gap-2">
    <kbd class="px-2 py-1 bg-bg-secondary border border-border rounded">Enter</kbd>
    <span>open</span>
  </div>
  <div class="flex items-center gap-2">
    <kbd class="px-2 py-1 bg-bg-secondary border border-border rounded">/</kbd>
    <span>search</span>
  </div>
  <div class="flex items-center gap-2">
    <kbd class="px-2 py-1 bg-bg-secondary border border-border rounded">t</kbd>
    <span>tags</span>
  </div>
  <div class="flex items-center gap-2">
    <kbd class="px-2 py-1 bg-bg-secondary border border-border rounded">Esc</kbd>
    <span>clear</span>
  </div>
  <div class="flex items-center gap-2">
    <kbd class="px-2 py-1 bg-bg-secondary border border-border rounded">q</kbd>
    <span>quit</span>
  </div>
</div>

<script>
  function updateInstructions(mode: 'vim' | 'arrows') {
    const navKeys = document.getElementById('nav-keys');
    if (navKeys) {
      navKeys.textContent = mode === 'vim' 
        ? 'hjkl navigate' 
        : '↑↓ navigate';
    }
  }

  // Listen for mode changes
  window.addEventListener('navigation-mode-change', ((e: CustomEvent) => {
    updateInstructions(e.detail.mode);
  }) as EventListener);

  // Initialize with saved mode
  const savedMode = localStorage.getItem('tui-navigation-mode') || 'arrows';
  updateInstructions(savedMode as 'vim' | 'arrows');
</script>

<style>
  kbd {
    font-family: 'Inconsolata', monospace;
    font-size: 0.75rem;
  }
</style>

