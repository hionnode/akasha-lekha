---
import { generateSEO } from '../../utils/seo';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  tags?: string[];
  author?: string;
  category?: string;
}

const { title, description, image, type, publishedTime, modifiedTime, tags, author, category } =
  Astro.props;
const seo = generateSEO({ title, description, image, type, publishedTime, modifiedTime, tags });

// Generate canonical URL with fallback for development
const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : `https://works-on-my.cloud${Astro.url.pathname}`;

// Generate Article schema for blog posts
const articleSchema =
  type === 'article'
    ? {
        '@context': 'https://schema.org',
        '@type': 'Article',
        headline: title,
        description: description || seo.description,
        author: {
          '@type': 'Person',
          name: author || 'works-on-my.cloud',
        },
        publisher: {
          '@type': 'Organization',
          name: 'works-on-my.cloud',
          logo: {
            '@type': 'ImageObject',
            url: Astro.site ? `${Astro.site}favicon.svg` : 'https://works-on-my.cloud/favicon.svg',
          },
        },
        datePublished: publishedTime,
        dateModified: modifiedTime || publishedTime,
        image: image
          ? Astro.site
            ? `${Astro.site}${image}`
            : `https://works-on-my.cloud${image}`
          : seo.openGraph.images[0].url,
        articleSection: category,
        keywords: tags?.join(', '),
      }
    : null;

// Generate Breadcrumb schema for blog posts
const breadcrumbSchema =
  type === 'article' && category
    ? {
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: [
          {
            '@type': 'ListItem',
            position: 1,
            name: 'Home',
            item: Astro.site || 'https://works-on-my.cloud',
          },
          {
            '@type': 'ListItem',
            position: 2,
            name: 'Blog',
            item: Astro.site ? `${Astro.site}blog` : 'https://works-on-my.cloud/blog',
          },
          {
            '@type': 'ListItem',
            position: 3,
            name: title,
            item: canonicalURL,
          },
        ],
      }
    : null;
---

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Basic SEO -->
<title>{seo.title}</title>
<meta name="description" content={seo.description} />

<!-- Open Graph -->
<meta property="og:title" content={seo.openGraph.title} />
<meta property="og:description" content={seo.openGraph.description} />
<meta property="og:type" content={seo.openGraph.type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={seo.openGraph.images[0].url} />
<meta property="og:site_name" content={seo.openGraph.siteName} />
{
  seo.openGraph.publishedTime && (
    <meta property="article:published_time" content={seo.openGraph.publishedTime} />
  )
}
{
  seo.openGraph.modifiedTime && (
    <meta property="article:modified_time" content={seo.openGraph.modifiedTime} />
  )
}
{author && <meta property="article:author" content={author} />}
{category && <meta property="article:section" content={category} />}
{tags && tags.length > 0 && tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- Twitter Cards -->
<meta name="twitter:card" content={seo.twitter.card} />
<meta name="twitter:title" content={seo.twitter.title} />
<meta name="twitter:description" content={seo.twitter.description} />
<meta name="twitter:image" content={seo.twitter.images[0]} />

<!-- JSON-LD Schema Markup -->
{articleSchema && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}
{
  breadcrumbSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  )
}
