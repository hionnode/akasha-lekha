---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="flex flex-wrap gap-3 items-center">
  <span class="text-sm text-fg-muted font-semibold">Share:</span>

  <!-- Twitter -->
  <a
    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="px-3 py-1.5 text-sm font-semibold bg-bg-secondary border border-border hover:bg-bg-tertiary hover:border-accent-blue transition-colors rounded flex items-center gap-2"
    aria-label="Share on Twitter"
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path
        d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
      ></path>
    </svg>
    Twitter
  </a>

  <!-- LinkedIn -->
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="px-3 py-1.5 text-sm font-semibold bg-bg-secondary border border-border hover:bg-bg-tertiary hover:border-accent-blue transition-colors rounded flex items-center gap-2"
    aria-label="Share on LinkedIn"
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path
        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
      ></path>
    </svg>
    LinkedIn
  </a>

  <!-- Copy Link -->
  <button
    id="copy-link-btn"
    class="px-3 py-1.5 text-sm font-semibold bg-bg-secondary border border-border hover:bg-bg-tertiary hover:border-accent-blue transition-colors rounded flex items-center gap-2"
    aria-label="Copy link"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
      ></path>
    </svg>
    <span id="copy-link-text">Copy Link</span>
  </button>
</div>

<script>
  const copyBtn = document.getElementById('copy-link-btn');
  const copyText = document.getElementById('copy-link-text');
  const urlToCopy = window.location.href;

  if (copyBtn && copyText) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(urlToCopy);
        const originalText = copyText.textContent;
        copyText.textContent = 'Copied!';
        copyBtn.classList.add('border-accent-green', 'text-accent-green');

        setTimeout(() => {
          copyText.textContent = originalText;
          copyBtn.classList.remove('border-accent-green', 'text-accent-green');
        }, 2000);
      } catch {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = urlToCopy;
        textArea.style.position = 'fixed';
        textArea.style.opacity = '0';
        document.body.appendChild(textArea);
        textArea.select();
        try {
          document.execCommand('copy');
          const originalText = copyText.textContent;
          copyText.textContent = 'Copied!';
          copyBtn.classList.add('border-accent-green', 'text-accent-green');

          setTimeout(() => {
            copyText.textContent = originalText;
            copyBtn.classList.remove('border-accent-green', 'text-accent-green');
          }, 2000);
        } catch (fallbackErr) {
          console.error('Failed to copy:', fallbackErr);
        }
        document.body.removeChild(textArea);
      }
    });
  }

  // Re-initialize on navigation (Astro View Transitions)
  document.addEventListener('astro:page-load', () => {
    const newCopyBtn = document.getElementById('copy-link-btn');
    const newCopyText = document.getElementById('copy-link-text');
    const newUrlToCopy = window.location.href;

    if (newCopyBtn && newCopyText) {
      newCopyBtn.addEventListener('click', async () => {
        try {
          await navigator.clipboard.writeText(newUrlToCopy);
          const originalText = newCopyText.textContent;
          newCopyText.textContent = 'Copied!';
          newCopyBtn.classList.add('border-accent-green', 'text-accent-green');

          setTimeout(() => {
            newCopyText.textContent = originalText;
            newCopyBtn.classList.remove('border-accent-green', 'text-accent-green');
          }, 2000);
        } catch {
          const textArea = document.createElement('textarea');
          textArea.value = newUrlToCopy;
          textArea.style.position = 'fixed';
          textArea.style.opacity = '0';
          document.body.appendChild(textArea);
          textArea.select();
          try {
            document.execCommand('copy');
            const originalText = newCopyText.textContent;
            newCopyText.textContent = 'Copied!';
            newCopyBtn.classList.add('border-accent-green', 'text-accent-green');

            setTimeout(() => {
              newCopyText.textContent = originalText;
              newCopyBtn.classList.remove('border-accent-green', 'text-accent-green');
            }, 2000);
          } catch (fallbackErr) {
            console.error('Failed to copy:', fallbackErr);
          }
          document.body.removeChild(textArea);
        }
      });
    }
  });
</script>
