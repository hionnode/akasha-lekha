---
interface Props {
  host: string;
  path: string;
  service: string;
  port: number;
  tls?: boolean;
}

const { host, path, service, port, tls = false } = Astro.props;
---

<div class="ingress-item">
  <div class="ingress-header">
    <div class="ingress-host">
      {tls && <span class="ingress-tls">ðŸ”’</span>}
      <code>{host}</code>
    </div>
    <span class="ingress-path">{path}</span>
  </div>
  <div class="ingress-routing">
    <span class="routing-label">Routes to:</span>
    <code class="routing-service">{service}</code>
    <span class="routing-port">:{port}</span>
  </div>
</div>

<style>
  .ingress-item {
    margin: 1rem 0;
    padding: 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
  }

  .ingress-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .ingress-host {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--fg-primary);
    font-weight: 600;
    font-family: 'Inconsolata', monospace;
  }

  .ingress-host code {
    color: var(--accent-cyan);
    background: transparent;
    padding: 0;
    border: none;
    font-size: 0.9375rem;
  }

  .ingress-tls {
    font-size: 0.875rem;
  }

  .ingress-path {
    color: var(--fg-muted);
    font-size: 0.875rem;
    font-family: 'Inconsolata', monospace;
    padding: 0.25rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: 0.25rem;
  }

  .ingress-routing {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Inconsolata', monospace;
    font-size: 0.875rem;
  }

  .routing-label {
    color: var(--fg-muted);
  }

  .routing-service {
    color: var(--accent-blue);
    font-weight: 600;
  }

  .routing-port {
    color: var(--accent-cyan);
  }
</style>
