---
interface Props {
  kind?: string;
  namespace?: string;
  name?: string;
  class?: string;
}

const { kind, namespace, name, class: className = '' } = Astro.props;
const manifestId = `k8s-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`k8s-manifest ${className}`} data-manifest-id={manifestId}>
  <div class="k8s-manifest-header">
    {kind && <span class="k8s-resource-badge">{kind}</span>}
    {
      namespace && (
        <span class="k8s-namespace">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
          </svg>
          {namespace}
        </span>
      )
    }
    {name && <span class="k8s-resource-name">{name}</span>}
    <button class="k8s-copy-button" data-manifest-id={manifestId} aria-label="Copy manifest">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
    </button>
  </div>
  <div class="k8s-manifest-content">
    <slot />
  </div>
</div>

<script>
  function initK8sManifest() {
    const buttons = document.querySelectorAll('.k8s-copy-button');

    buttons.forEach((button) => {
      button.addEventListener('click', async (e) => {
        e.stopPropagation();
        const manifestId = (button as HTMLElement).getAttribute('data-manifest-id');
        if (!manifestId) return;

        const manifest = document.querySelector(
          `[data-manifest-id="${manifestId}"] .k8s-manifest-content`
        );
        if (!manifest) return;

        // Extract code content
        const codeBlock = manifest.querySelector('code');
        const text = codeBlock?.textContent || manifest.textContent || '';

        try {
          await navigator.clipboard.writeText(text.trim());
          const originalHTML = button.innerHTML;
          button.innerHTML =
            '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>';
          button.classList.add('copied');

          setTimeout(() => {
            button.innerHTML = originalHTML;
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initK8sManifest);
  } else {
    initK8sManifest();
  }

  // Re-initialize on navigation (Astro View Transitions)
  document.addEventListener('astro:page-load', initK8sManifest);
</script>

<style>
  .k8s-manifest {
    margin: 1.5rem 0;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    overflow: hidden;
    background: var(--bg-secondary);
  }

  .k8s-manifest-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border);
    flex-wrap: wrap;
  }

  .k8s-resource-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    background: var(--accent-blue);
    color: var(--bg-primary);
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: 'Inconsolata', monospace;
  }

  .k8s-namespace {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--fg-muted);
    font-size: 0.75rem;
    font-family: 'Inconsolata', monospace;
  }

  .k8s-namespace svg {
    width: 14px;
    height: 14px;
  }

  .k8s-resource-name {
    flex: 1;
    color: var(--fg-secondary);
    font-size: 0.875rem;
    font-family: 'Inconsolata', monospace;
  }

  .k8s-copy-button {
    background: transparent;
    border: none;
    color: var(--fg-muted);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    margin-left: auto;
  }

  .k8s-copy-button:hover {
    background: var(--bg-secondary);
    color: var(--fg-secondary);
  }

  .k8s-copy-button.copied {
    color: var(--accent-green);
  }

  .k8s-copy-button svg {
    width: 16px;
    height: 16px;
  }

  .k8s-manifest-content {
    padding: 1rem;
  }

  .k8s-manifest-content :global(pre) {
    margin: 0;
    background: transparent;
    border: none;
  }
</style>
