---
import { getRelatedPostsByTags } from '../../utils/tagNavigation';

interface Props {
  series: string;
  currentPart: number;
  seriesTotal: number;
  currentSlug: string;
  currentTags: string[];
  allPosts: Array<{
    slug: string;
    data: {
      title: string;
      series?: string;
      seriesPart?: number;
      tags: string[];
      date: string;
      excerpt: string;
      draft?: boolean;
    };
  }>;
}

const { series, currentPart, seriesTotal, currentSlug, currentTags, allPosts } = Astro.props;

// Get all posts in this series, sorted by part number
const seriesPosts = allPosts
  .filter((post) => post.data.series === series && post.data.seriesPart)
  .sort((a, b) => (a.data.seriesPart || 0) - (b.data.seriesPart || 0));

// Get related posts by tags (excluding series posts)
const relatedPosts = getRelatedPostsByTags(
  allPosts.filter((p) => p.data.series !== series),
  currentSlug,
  currentTags,
  5
);
---

<aside
  id="series-sidebar"
  class="w-full lg:w-[250px] sticky top-24 self-start max-h-[calc(100vh-8rem)]"
>
  <div
    class="bg-bg-secondary/50 backdrop-blur-sm border border-border rounded-lg overflow-hidden flex flex-col max-h-[calc(100vh-8rem)]"
  >
    <!-- Series Header -->
    <div class="p-4 border-b border-border bg-bg-secondary">
      <div class="flex items-center gap-2 mb-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-accent-purple"
        >
          <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
          <path d="M8 7h6"></path>
          <path d="M8 11h8"></path>
        </svg>
        <h2 class="text-sm font-semibold text-accent-purple uppercase tracking-wider">Series</h2>
      </div>
      <h3 class="text-base font-bold text-fg-primary mb-2">{series}</h3>
      <div class="text-xs text-fg-muted">
        Part {currentPart} of {seriesTotal}
      </div>

      <!-- Progress Bar -->
      <div class="mt-3 h-1.5 bg-bg-tertiary rounded-full overflow-hidden">
        <div
          class="h-full bg-gradient-to-r from-accent-blue to-accent-cyan transition-all duration-300"
          style={`width: ${(currentPart / seriesTotal) * 100}%`}
        >
        </div>
      </div>
    </div>

    <!-- Series Parts List -->
    <div class="flex-1 overflow-y-auto sidebar-scroll p-4">
      <nav class="space-y-1.5 mb-6">
        {
          seriesPosts.map((post) => {
            const isCurrent = post.slug === currentSlug;
            const isCompleted = (post.data.seriesPart || 0) < currentPart;

            return (
              <a
                href={`/blog/${post.slug}`}
                class={`block px-3 py-2.5 rounded transition-all text-sm ${
                  isCurrent
                    ? 'bg-accent-blue/20 text-accent-blue border border-accent-blue shadow-sm'
                    : isCompleted
                      ? 'text-fg-secondary hover:bg-bg-tertiary hover:text-fg-primary border border-transparent'
                      : 'text-fg-muted hover:bg-bg-tertiary hover:text-fg-secondary border border-transparent'
                }`}
              >
                <div class="flex items-start gap-2">
                  <span
                    class={`font-mono text-xs mt-0.5 ${isCurrent ? 'text-accent-blue' : 'text-fg-muted'}`}
                  >
                    {isCompleted ? 'âœ“' : post.data.seriesPart}.
                  </span>
                  <span class="flex-1 leading-snug">
                    {post.data.title.replace(/^.*?Part \d+:\s*/, '')}
                  </span>
                </div>
                {isCurrent && (
                  <span class="inline-block mt-1.5 text-[10px] px-2 py-0.5 bg-accent-blue text-bg-primary rounded-full font-semibold uppercase tracking-wide">
                    Current
                  </span>
                )}
              </a>
            );
          })
        }
      </nav>

      <!-- Related Posts by Tag -->
      {
        relatedPosts.length > 0 && (
          <div class="pt-4 border-t border-border">
            <h3 class="text-xs font-semibold text-fg-muted uppercase tracking-wider mb-3">
              Related Posts
            </h3>
            <nav class="space-y-1.5">
              {relatedPosts.map((relatedPost) => (
                <a
                  href={`/blog/${relatedPost.slug}`}
                  class="block px-3 py-2 rounded text-sm transition-all text-fg-secondary hover:bg-bg-tertiary hover:text-fg-primary border border-transparent"
                >
                  <div class="leading-snug line-clamp-2">{relatedPost.title}</div>
                  <div class="mt-1 flex items-center gap-1 text-[10px] text-fg-muted">
                    {relatedPost.tags.slice(0, 2).map((tag) => (
                      <span class="uppercase tracking-wider">{tag}</span>
                    ))}
                  </div>
                </a>
              ))}
            </nav>
          </div>
        )
      }
    </div>
  </div>
</aside>

<style>
  .sidebar-scroll::-webkit-scrollbar {
    width: 4px;
  }

  .sidebar-scroll::-webkit-scrollbar-track {
    background: transparent;
  }

  .sidebar-scroll::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 2px;
  }

  .sidebar-scroll::-webkit-scrollbar-thumb:hover {
    background: var(--accent-blue);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
