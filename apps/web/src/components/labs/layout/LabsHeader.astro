---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navItems = [
  { href: '/labs', label: 'Labs', exact: true },
  { href: '/labs/modules', label: 'Modules' },
  { href: '/labs/setup', label: 'Setup' },
];

const isActive = (href: string, exact = false) => {
  if (exact) return currentPath === href;
  return currentPath.startsWith(href);
};
---

<header
  class="sticky top-0 z-40 w-full border-b border-border bg-bg-primary/95 backdrop-blur supports-[backdrop-filter]:bg-bg-primary/80"
>
  <div class="container mx-auto px-4">
    <div class="flex h-14 items-center justify-between">
      {/* Logo / Brand */}
      <div class="flex items-center gap-6">
        <a
          href="/labs"
          class="flex items-center gap-2 font-bold text-fg-primary hover:text-accent-blue transition-colors"
        >
          <span class="text-lg">ðŸ§ª</span>
          <span>Labs</span>
        </a>

        {/* Desktop Navigation */}
        <nav class="hidden md:flex items-center gap-1">
          {
            navItems.map((item) => (
              <a
                href={item.href}
                class:list={[
                  'px-3 py-1.5 text-sm font-medium rounded-md transition-colors',
                  isActive(item.href, item.exact)
                    ? 'text-accent-blue bg-accent-blue/10'
                    : 'text-fg-secondary hover:text-fg-primary hover:bg-bg-tertiary',
                ]}
              >
                {item.label}
              </a>
            ))
          }
        </nav>
      </div>

      {/* Right side */}
      <div class="flex items-center gap-4">
        {/* Back to Blog link */}
        <a
          href="/"
          class="hidden sm:flex items-center gap-1 text-sm text-fg-muted hover:text-fg-secondary transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Blog
        </a>

        {/* Get Started link */}
        <a
          href="/labs/setup"
          class="hidden sm:inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-bg-primary bg-accent-blue hover:bg-accent-blue/90 rounded-md transition-colors"
        >
          Get Started
        </a>

        {/* Mobile menu button */}
        <button
          type="button"
          class="md:hidden p-2 text-fg-muted hover:text-fg-primary hover:bg-bg-tertiary rounded-md transition-colors"
          aria-label="Open menu"
          data-mobile-menu-toggle
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  {/* Mobile Navigation */}
  <nav class="hidden md:hidden border-t border-border bg-bg-secondary" data-mobile-menu>
    <div class="container mx-auto px-4 py-2 space-y-1">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'block px-3 py-2 text-sm font-medium rounded-md transition-colors',
              isActive(item.href, item.exact)
                ? 'text-accent-blue bg-accent-blue/10'
                : 'text-fg-secondary hover:text-fg-primary hover:bg-bg-tertiary',
            ]}
          >
            {item.label}
          </a>
        ))
      }
      <hr class="border-border my-2" />
      <a
        href="/"
        class="flex items-center gap-2 px-3 py-2 text-sm text-fg-muted hover:text-fg-secondary transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Blog
      </a>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('[data-mobile-menu-toggle]');
    const menu = document.querySelector('[data-mobile-menu]');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
