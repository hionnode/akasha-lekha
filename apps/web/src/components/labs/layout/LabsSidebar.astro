---
interface Module {
  id: string;
  title: string;
  icon?: string;
  exerciseCount: number;
  status: 'available' | 'coming-soon' | 'beta';
}

interface Props {
  modules: Module[];
  currentModuleId?: string;
  currentExerciseId?: string;
  class?: string;
}

const { modules, currentModuleId, currentExerciseId, class: className } = Astro.props;

// Sort modules by status (available first) then by order
const sortedModules = [...modules].sort((a, b) => {
  const statusOrder = { available: 0, beta: 1, 'coming-soon': 2 };
  return (statusOrder[a.status] || 2) - (statusOrder[b.status] || 2);
});
---

<aside class:list={['labs-sidebar', className]}>
  <nav class="space-y-1">
    <h3 class="px-3 py-2 text-xs font-semibold text-fg-muted uppercase tracking-wider">
      Learning Modules
    </h3>

    {sortedModules.map((module) => {
      const isActive = module.id === currentModuleId;
      const isAvailable = module.status === 'available';

      return (
        <div>
          {isAvailable ? (
            <a
              href={`/labs/modules/${module.id}`}
              class:list={[
                'flex items-center gap-3 px-3 py-2 text-sm rounded-md transition-colors',
                isActive
                  ? 'bg-accent-blue/10 text-accent-blue font-medium'
                  : 'text-fg-secondary hover:text-fg-primary hover:bg-bg-tertiary',
              ]}
            >
              {module.icon && <span class="text-base">{module.icon}</span>}
              <span class="flex-1 truncate">{module.title}</span>
              <span class="text-xs text-fg-muted">
                {module.exerciseCount}
              </span>
            </a>
          ) : (
            <div
              class="flex items-center gap-3 px-3 py-2 text-sm text-fg-muted opacity-60 cursor-not-allowed"
            >
              {module.icon && <span class="text-base opacity-50">{module.icon}</span>}
              <span class="flex-1 truncate">{module.title}</span>
              <span
                class:list={[
                  'text-[10px] font-medium uppercase tracking-wider px-1.5 py-0.5 rounded',
                  module.status === 'coming-soon' && 'bg-fg-muted/20',
                  module.status === 'beta' && 'bg-accent-cyan/20 text-accent-cyan',
                ]}
              >
                {module.status === 'coming-soon' ? 'Soon' : 'Beta'}
              </span>
            </div>
          )}
        </div>
      );
    })}
  </nav>

