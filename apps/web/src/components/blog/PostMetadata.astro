---
interface Props {
  date: string;
  updated?: string;
  slug: string;
}

const { date, updated } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdated = updated
  ? new Date(updated).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;
---

<div
  class="mt-12 pt-8 border-t border-border flex flex-wrap items-center gap-4 text-sm text-fg-muted"
>
  <span>Published: {formattedDate}</span>
  {
    formattedUpdated && formattedUpdated !== formattedDate && (
      <>
        <span>&bull;</span>
        <span>Updated: {formattedUpdated}</span>
      </>
    )
  }
</div>
