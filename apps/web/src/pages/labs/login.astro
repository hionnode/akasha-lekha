---
import Layout from '../../layouts/Layout.astro';
import LabsHeader from '../../components/labs/layout/LabsHeader.astro';

// In production, this would redirect to the actual OAuth URL
const apiUrl = import.meta.env.PUBLIC_LABS_API_URL || 'http://localhost:3000/api';
const authUrl = `${apiUrl}/auth/github`;
---

<Layout title="Login | Labs | works-on-my.cloud">
  <div class="min-h-screen flex flex-col bg-bg-primary">
    <LabsHeader currentPath="/labs/login" />

    <main class="flex-1 flex items-center justify-center py-12">
      <div class="text-center max-w-md mx-auto px-4">
        <div class="w-16 h-16 mx-auto mb-6 flex items-center justify-center rounded-full bg-accent-blue/10 text-accent-blue">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </div>

        <h1 class="text-2xl font-bold text-fg-primary mb-2">
          Login to Labs
        </h1>
        <p class="text-fg-secondary mb-8">
          Sign in with GitHub to track your progress and sync across devices.
        </p>

        <a
          href={authUrl}
          id="login-button"
          class="inline-flex items-center gap-3 px-6 py-3 text-lg font-semibold text-white bg-[#24292e] hover:bg-[#1b1f23] rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          Continue with GitHub
        </a>

        <p class="mt-8 text-sm text-fg-muted">
          Don't want to sign in?{' '}
          <a href="/labs/modules" class="text-accent-blue hover:underline">
            Browse modules
          </a>{' '}
          without an account.
        </p>
      </div>
    </main>
  </div>
</Layout>

<script>
  // Show loading state when clicking login
  document.getElementById('login-button')?.addEventListener('click', function() {
    this.innerHTML = `
      <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Redirecting...
    `;
  });
</script>
